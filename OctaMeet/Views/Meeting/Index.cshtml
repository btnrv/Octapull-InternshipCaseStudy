@model IEnumerable<OctaMeet.Models.Meeting>

@{
    ViewData["Title"] = "Toplantılar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Toplantılar</h1>


<h4><a asp-action="Create">Yeni toplantı oluştur</a></h4>

<table class="table">
    <thead>
        <tr>
            <th>
                İsim
            </th>
            <th>
                Başlangıç
            </th>
            <th>
                Bitiş
            </th>
            <th>
                Açıklama
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Görüntüle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
