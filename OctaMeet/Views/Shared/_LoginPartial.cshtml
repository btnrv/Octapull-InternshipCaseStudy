@using Microsoft.AspNetCore.Identity
@using OctaMeet.Areas.Identity.Data

@inject SignInManager<OctaMeetUser> SignInManager
@inject UserManager<OctaMeetUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <div class="nav-link text-dark">@UserManager.GetUserName(User) olarak giriş yapıldı.</div>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Meeting", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Çıkış yap</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Kayıt ol</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Giriş yap</a>
    </li>
}
</ul>
